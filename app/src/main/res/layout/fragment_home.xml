<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newstitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="News"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Scroll horizontally through items"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/news1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="197dp"
                android:layout_height="160dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/news2" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="204dp"
                android:layout_height="158dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/news3" />
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/programmestitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Programmes"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:contentDescription="Scroll horizontally through items">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/zeroplastic"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/programmes1"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="181dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/programmes2"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/organizationtitle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Organizations"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Scroll horizontally through items">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="143dp"
                android:layout_height="151dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/organization1" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="154dp"
                android:layout_height="148dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/organization3" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="140dp"
                android:layout_height="146dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/organization4" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>

